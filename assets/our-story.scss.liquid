.mh-our-story-banner-container {
    max-width: 1300px;
    margin: 0 auto;
    .closing-phrase {
      margin-top: 10px;
    }
    .mh-our-story-banner {
      min-height: 440px;
      display: flex;
      margin: 0 auto;
      justify-content: center;
      
      .mh-our-story__img-wrap {
        max-width: 500px;
        margin-right: 40px;
      }
      .mh-our-story__img {
        &.mobile {
          display: none;
        }
        &.desktop {
          display: block;
        }
      }
      .text {
	    display: flex;
        flex-direction: column;
        justify-content: center;
        width: 60%;
        padding: 40px 25px 45px;
        line-height: 1.33;
        
        &.custom-width {
          max-width: 600px;
        }
        
        div {
          margin-bottom: 10px;
/*           font-size: 20px; */
          max-width: 600px;
          line-height: normal;
          letter-spacing: normal;
          color: var(--description_color);
          p {
          	margin: 0;
            &:last-of-type {
              margin-top: 30px;
            }
          }
        }
        img {
          vertical-align: bottom;
          width: 100%;
          object-fit: cover;
          display: block;
          max-width: 450px;
        }
      }
    }
}

@media only screen and (max-width: 991px) {
  
  .mh-our-story-banner-container {

    margin: 0 auto;
    .h2-mobile {
      display: block;
      padding-top: 15px;
      line-height: initial;
      text-align: left;
      text-transform: initial;
      margin-bottom: 25px;
      color: var(--title_color);
    }
    
    .mh-our-story-banner {
      .mh-our-story__img-wrap {
        margin: 0;
      }
    }
    
    .mh-our-story-banner {
      min-height: 440px;
      display: flex;
      flex-direction: column;
      align-items: center;
      .mh-our-story__img{
        width: 100%;
      }
      .text {
	    display: flex;
        flex-direction: column;
        justify-content: left;
        line-height: 24px;
        width: 100%;
        padding: 0 20px 45px;
        strong {
		  font-weight: normal;
        }
        div {
          margin-bottom: 10px;
          max-width: unset;
          line-height: 1.33;
          letter-spacing: normal;
          color: var(--description_color);
        }
        img {
          max-width: 300px;
          margin-left: auto;
          margin-right: auto;
        }
      }
    }
  }
}

@media only screen and (max-width: 768px) {
  .mh-our-story-banner-container {
    .mh-our-story-banner {
      .mh-our-story__img {
        &.mobile {
          display: block;
        }
        &.desktop {
          display: none;
        }
      }
    }
  }
}