<div class='custom-text-container'>
  <h2>{{ section.settings.section_title }}</h2>
  <p class='textarea body-medium'>{{ section.settings.text }}</p>
</div>

<style>
  #shopify-section-{{section.id}}.custom-text-section{
    color: {{ section.settings.color }};
    background-color: {{ section.settings.bg_color }};
  }
</style>

{% schema %}
  {
    "name": "Text",
  	"class": "custom-text-section",
    "settings": [
		{
			"type": "text",
			"id": "section_title",
			"label": "Title",
			"default": "Title"
		},
		{
			"type": "textarea",
			"id": "text",
			"label": "Description",
			"default": "Description"
		},
		{
			"type": "color",
			"id": "color",
			"label": "Text Color",
			"default": "#fff"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background Color",
			"default": "#4d4d4d"
		}
	],
	"presets": [
		{
          "name": "Text",
          "category": "Custom Sections"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

