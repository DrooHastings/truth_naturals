<div class='cb-container'>
  {% for block in section.blocks %}
  {%  assign test = block.settings.url | split: '/pages/' %}
  	<a {% if pages[test[1]].title == 'FAQ' %} href='{{ block.settings.url }}#{{block.settings.title | handleize}}'{% else %} href='{{ block.settings.url }}' {% endif %}class='cb-item'>
      <img class='cb-image' src='{{ block.settings.image | img_url: 'master' }}'>
      <p class='cb-text textarea'>{{ block.settings.title }}</p>
  	</a>
  {% endfor %}
</div>
<style>
  #shopify-section-{{section.id}}.custom-bordered-section{
    background-color: {{ section.settings.bg_color }};
  }
  {%comment%}
  #shopify-section-{{section.id}} .cb-image{
    
  }
  {%endcomment%}
  #shopify-section-{{section.id}} .cb-text{
    background-color: {{ section.settings.text_bg_color | color_modify: 'alpha', 0.5 }};
    color: {{ section.settings.color }};
    border-bottom: {{ section.settings.width}}px solid {{ section.settings.border_color}};
  }
</style>


{% schema %}
  {
    "name": "Bordered Images",
  	"class": "custom-bordered-section",
    "settings": [
		{
			"type": "color",
			"id": "bg_color",
			"label": "Section Background Color",
			"default": "#4a372e"
		},
		{
			"type": "color",
			"id": "border_color",
			"label": "Border Color",
			"default": "#32b275"
		},
		{
            "type":   "range",
            "id":     "width",
            "min":       0,
            "max":       30,
            "step":      1,
            "unit":      "px",
            "label":     "Border Width",
            "default":   15
        },
		{
			"type": "color",
			"id": "text_bg_color",
			"label": "Text Background Color",
			"default": "#433d3c"
		},
		{
			"type": "color",
			"id": "color",
			"label": "Text Color",
			"default": "#fff"
		}
	],
	"blocks":[
		{
			"type": "image",
			"name": "Image Block",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				},
				{
					"type": "textarea",
					"id": "title",
					"label": "Title",
					"default": "Title"
				},
				{
					"type": "url",
					"id": "url",
					"label": "Link"
				}
			]
		}
	],
	"presets": [
		{
          "name": "Bordered Images",
          "category": "Custom Sections"
		}
	]
  }
{% endschema %}

