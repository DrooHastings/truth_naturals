<script>
  var mySwiper_{{ section.id }} = undefined;
  

  document.addEventListener("DOMContentLoaded", function() {
    function initSwiper_{{ section.id }}() {
        var screenWidth = $(window).width();
        if(screenWidth < 768 && mySwiper_{{ section.id }} == undefined) {
          	mySwiper_{{ section.id }} = new Swiper('#shopify-section-{{ section.id }} .our-values__swiper', {
                slidesPerView: 1,
                speed: 300,
                spaceBetween: 0,
                pagination: {
                  el: '[data-value-pagination]'
                },      
                loop: true,
                navigation: {
                  nextEl: '[data-value-next]',
                  prevEl: '[data-value-prev]',
                },
            });
        } else if (screenWidth >= 768 && mySwiper_{{ section.id }} != undefined) {
            mySwiper_{{ section.id }}.destroy();
            mySwiper_{{ section.id }} = undefined;
            jQuery('#shopify-section-{{ section.id }} .swiper-wrapper').removeAttr('style');
            jQuery('#shopify-section-{{ section.id }} .swiper-slide').removeAttr('style');
        }
    }
                   
    setTimeout(initSwiper_{{ section.id }},500);

    //Swiper plugin initialization on window resize
    $(window).on('resize', function(){
        initSwiper_{{ section.id }}();
    });
  });
</script>


<style>
