    .our-values__content {
      text-align: left;
    }
    .our-values-content__title {
      font-size: 18px;     
    }
    .our-values__title {
      font-size: 24px;
    }
    .our-values-content__description {
      font-size: 18px;
      line-height: 1.25;
    }
    .our-values__subtitle {
      margin-bottom: 20px;
      font-size: 18px;
      font-weight: 500;
    } 
    /* Swiper */
    .our-values__swiper {
      max-width: 375px;
    }
    .swiper-slide-active .our-values__figure {
      position: relative; 
      background: #37404c; 
      fill: #c6b476;
      color: #c6b476;
      z-index: 1;
      display: inline-block;
    } 
  }
</style>
