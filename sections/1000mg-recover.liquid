<div class='clri'>
  <div class='clri-text {% if section.settings.main_image == blank %}clri-full{% endif %}'>
    <h2 class='clri-header' style='text-align: {{ section.settings.title_alignment }}'>{{ section.settings.section_title }}</h2>
    <p class='textarea'>{{ section.settings.section_text }}</p>
    {% if section.settings.bottom_image %}
      <div class='clri-bottom-image'>
        <img class='clrib-image-{{ section.settings.bottom_alignment }}' src='{{ section.settings.bottom_image | img_url: 'master' }}'>
      </div>
    {% endif %}
  </div>
  {% if section.settings.main_image %}
    <div class='clri-image {% if section.settings.alignment == 'left' %}image-left{% endif %}'>
      <img src='{{ section.settings.main_image | img_url: 'master' }}'>
    </div>
  {% endif %}
</div>

{% if section.settings.show_hr %}
	<hr class='custom-hr'>
{% endif %}

<style>
  #shopify-section-{{ section.id }}{
    background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} .clri-header{
    color: {{ section.settings.color }};
  }
  #shopify-section-{{ section.id }} .clri{
    
  }
</style>

{% schema %}
  {
    "name": "Left | Right Image",
    "settings": [
		{
			"type": "image_picker",
			"id": "main_image",
			"label": "Main Image"
		},
		{
           "type":      "select",
           "id":        "alignment",
           "label":     "Image Alignment",
           "options": [
             {
               "value": "left",
               "label": "Left"
             },
             {
               "value": "right",
               "label": "Right"
             }
           ],
           "default":   "right",
           "info":      "Choose image alignment"
        },
		{
			"type": "text",
			"id": "section_title",
			"label": "Title",
			"default": "Title"
		},
		{
           "type":      "select",
           "id":        "title_alignment",
           "label":     "Title Alignment",
           "options": [
             {
               "value": "left",
               "label": "Left"
             },
             {
               "value": "right",
               "label": "Right"
             },
             {
               "value": "center",
               "label": "Center"
             }
           ],
           "default":   "left"
        },
		{
			"type": "textarea",
			"id": "section_text",
			"label": "Text",
			"default": "Text"
		},
		{
			"type": "image_picker",
			"id": "bottom_image",
			"label": "Text Bottom Image | Full Width Bottom Image",
			"info": "Use if you need it. If you need it full width, leave main image empty."
		},
		{
           "type":      "select",
           "id":        "bottom_alignment",
           "label":     "Bottom Image Alignment",
           "options": [
             {
               "value": "left",
               "label": "Left"
             },
             {
               "value": "right",
               "label": "Right"
             },
             {
               "value": "center",
               "label": "Center"
             }
           ],
           "default":   "left"
        },
		{
			"type": "color",
			"id": "color",
			"label": "Title Color",
			"default": "#238554"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background Color",
			"default": "#fafafa"
		},
		{
			"type": "checkbox",
			"id": "show_hr",
			"label": "Show Bottom Line?"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

