{% include 'section-text-column-with-image' %}

{% schema %}
{
  "name": "Text column with image",
  "class": "image-with-text gd-stl",
  "settings": [
    {
      "type": "checkbox",
      "label": "Show section",
      "id": "show",
      "default": false
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "color",
      "id": "ttl_color",
      "label": "Text",
      "default": "#252525"
    },
    {
      "type": "color",
      "id": "ttl_brdr_color",
      "label": "Border bottom",
      "default": "#daad67"
    },
    {
      "type": "text",
      "id": "ttl",
      "label": "Text"
    },
    {
      "type":     "range",
      "id":       "ttl_size_desk",
      "min":       6,
      "max":       106,
      "step":      1,
      "unit":     "px",
      "label":    "Font size on desktop",
      "default":   22
    },
    {
      "type":     "range",
      "id":       "ttl_size_mob",
      "min":       6,
      "max":       106,
      "step":      1,
      "unit":     "px",
      "label":    "Font size on mobile",
      "default":   17
    },
    {
      "type": "select",
      "id": "ttl_weight",
      "label": "Font weight",
      "options": [
        { "value": "100", "label": "Thin" },
        { "value": "200", "label": "Extra Light" },
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra Bold" },
        { "value": "900", "label": "Black " }
