    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "img_desk",
      "label": "Image on desktop"
    },
    {
      "type": "image_picker",
      "id": "img_mob",
      "label": "Image on mobile"
    },
    {
      "type":      "select",
      "id":        "img_align",
      "label":     "Image alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "header",
      "content": "Column heading"
    },
    {
      "type": "color",
      "id": "col_ttl_color",
      "label": "Text",
      "default": "#231F20"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Text"
    },
    {
      "type":     "range",
      "id":       "col_ttl_size_desk",
      "min":       6,
      "max":       106,
      "step":      1,
      "unit":     "px",
      "label":    "Font size on desktop",
