{{ 'rebrand-header.scss.css' | asset_url | stylesheet_tag }}
{% if section.settings.offer_enable %}
  <div id="hdr--offer-bar-wrap">
    {% if section.settings.offer_txt != blank %}
      <span id="hdr--offer-bar-txt">{{ section.settings.offer_txt }}</span>
    {% endif %}
    {% if section.settings.offer_btn != blank %}
      <a class="show-subscription-popup manual-optin-trigger hdr--offer-bar-btn" href="https://app.monstercampaigns.com/c/{{ settings.theme_optin }}/" data-optin-slug="{{ settings.theme_optin }}">{{ section.settings.offer_btn }}</a>
    {% endif %}
  </div>
{% endif %}

<div id='header-overlay'></div>

{% comment %}
  <div class="ch-top">
    <div class="ch-top-row">
      <div class="ch-social">
      	{% if settings.phone != blank %}
          <a class="social-link phone" href="tel:{{settings.phone}}">
            {% include 'icon-phone'%}
            <span>{{ settings.phone }}</span>
          </a>
        {% endif %}
      </div>
      <div class="ch-flag-and-promo">
        <a class="ch-flag" href="{{section.settings.flag_url}}">
          <img class="ch-flag-image" alt="{{section.settings.flag.alt}}" src="{{ section.settings.flag | img_url:"100x100" }}">
        </a>
        <a class="ch-promo" href="{{section.settings.promo_url}}">
          <span class="ch-promo-text">{{ section.settings.promo_text }}</span>
        </a>
      </div>
      <div class="ch-account-and-cart">
        <div class="ch-search">
          <form  action="/search" method="get" role="search">
            {% if settings.search-products-only %}
              <input type="hidden" name="type" value="product" />
            {% endif %}
            <input name="q" class="ch-search-input" type="text" placeholder="{{ 'layout.header.search_placeholder' | t }}"/>
            <button class="ch-search-button"><i class="fas fa-search"></i></button>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endcomment %}

<div class="ch-bot" onmouseleave="closeNav()">
  <div class="ch-bot-row">

    <div class="ch-menu">
      {% assign menu = linklists[section.settings.menu] %}
  	  {% for link in linklists[section.settings.menu].links limit:4 %}
        <div class="ch-menu-item" data-title="{{ link.title }}" data-value="0" onclick="openNavClick(event, '{{ link.title }}')" onmouseover="openNav(event, '{{ link.title }}')">
          <a href="{{ link.url }}" class="ch-menu-item-text {% if link.active %}active{% endif %}">
            <span>{{ link.title }}</span>
            {% if linklists[link.handle].links.size > 0%}
            	<span class="ch-menu-item-symbol fa-angle-down"></span>
            {% endif %}
          </a>
          {% if linklists[link.handle].links.size > 0%}
            <div class="ch-menu-item-wrapper" onmouseleave="closeNav()">
              <ul class="ch-menu-item-list {% if menu.levels <= 2 %}ch-menu-item-list-flex-column{% endif %} ch-menu-item-list-{{ link.title | downcase }}">
                  {% for child_link in linklists[link.handle].links %}
                    <li class="ch-menu-item-list-item">
                      {% if child_link.links != blank %}
                        <span class="ch-menu-child-link-text">{{child_link.title}}</span>
                        <ul class="grandchild {% if link.title != 'Learn' and forloop.last %}menu-item-flex-column{% endif %}">
                        {% for grandchild_link in child_link.links %}  
                          <li><a href= "{{ grandchild_link.url }}">{{ grandchild_link.title }}</a></li>
                        {% endfor %}
                        {% if link.title != 'Learn' and forloop.last %}
                          <li class="desktop-only">
                          	<a class="view-all-link" href= "{{ section.settings.all_products_link }}">{{ section.settings.all_products_link_title }}</a>
                          </li>
                         {% endif %}
                        </ul>
                      {% else %}
                        <a class="ch-menu-child-link" href="{{child_link.url}}">
                          <span class="ch-menu-child-link-text">{{child_link.title}}</span>
                        </a>
                      {% endif %}   
                    </li>
                  {% endfor %}
                </ul>
              {% if link.title == 'Shop' or link.title == 'Store' %}
                <!-- Products -->
                {% if section.settings.enable_products_section %}
                  {% assign product_one = all_products[section.settings.product_one] %}
                  {% assign product_two = all_products[section.settings.product_two] %}
                  <div class="header-products-wrapper link-content" id="shop">
                    <div class="header-product-item header-product-item-one">
                      <h2 class="header-product-section-item-title">{{ section.settings.product_one_section_text }}</h2>
                      <div class="header-product-item-image-wrapper">
                        <a href="{{ product_one.url | within: collection }}">
                          <img src='{{ product_one.featured_image | img_url: 'master' }}'>
                        </a>
                      </div>
                      {% if section.settings.enable_product_one_item_text %}
                        <h4 class="header-product-item-title">
                          <a href="{{ product_one.url | within: collection }}">{{ section.settings.product_one_item_text }}</a>
                        </h4>
                      {% else %}
                        <h4 class="header-product-item-title">
                          <a href="{{ product_one.url | within: collection }}">{{ product_one.title }}</a>
                        </h4>
                      {% endif %}
                    </div>
                    <div class="header-product-item  header-product-item-two">
                      <h2 class="header-product-section-item-title">{{ section.settings.product_two_section_text }}</h2>
                      <div class="header-product-item-image-wrapper">
                        <a href="{{ product_two.url | within: collection }}">
                          <img src='{{ product_two.featured_image | img_url: 'master' }}'>
                        </a>
                      </div>
                      {% if section.settings.enable_product_two_item_text %}
                        <h4 class="header-product-item-title">
                          <a href="{{ product_two.url | within: collection }}">{{ section.settings.product_two_item_text }}</a>
                        </h4>
                      {% else %}
                        <h4 class="header-product-item-title">
                          <a href="{{ product_two.url | within: collection }}">{{ product_two.title }}</a>
                        </h4>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
                <!-- End Products -->
              {% endif %}

              {% if link.title == 'Learn' %}
                <!-- Featured Blog Posts -->
                {% if section.settings.enable_featured_blog_posts %}
                  <div class="header-blog-post-wrapper link-content" id="learn">
                    <h2 class="header-blog-post-wrapper--title">{{ section.settings.ttl }}</h2>

                    <div class="header-blog-post-items-content">
                      {% for article in blogs[section.settings.blog].articles  limit: 4 %}
                      <div class="header-blog-post-item">
                        <a href="{{ article.url }}" style="background-image: url('{% if article.image %}{{ article.image.src | img_url: 'master' }}{% endif %}')" class="header-blog-post-item-img-wrap"></a>
                        <h4 class="header-blog-post-item-article-title">
                          <a href="{{ article.url }}">{{ article.title }}</a>
                        </h4>
                        {% if article.excerpt != empty %}
                        <div class="header-blog-post-item-article-description">{{ article.excerpt }}</div>
                        {% endif %}
                      </div>
                      {% endfor %}
                    </div>
                  </div>
                {% endif %}
                <!-- End Featured Blog Posts -->
              {% endif %}
            </div>
          {% endif %}
      	</div>
      {% endfor %}
      
    </div>
    
    <a class="ch-logo" href="/">
<!--       {% if section.settings.mobile_logo != blank %}
      	<img class="ch-logo-image" src="{{section.settings.mobile_logo | img_url:'master'}}">
      {% else %}
      	<span>{{ shop.name }}</span>
      {% endif %} -->
      <img class="ch-logo-image" src="{{ 'TN-2020Logo.svg' | asset_url }}">
    </a>

    <a class="ch-return-to-shopping" href="/collections/{{ coll_handle | default:'all-products' }}">
      {% include 'snippet-symbol' with 'arrow-left' %}
      {{ 'layout.header.continue_shopping' | t }}
    </a>
    
    <div class="ch-action-wrapper">
      {% for item in cart.items %}
        {% if forloop.first %}
          {% assign coll_handle = item.product.collections.first.handle %}
          {% if coll_handle == 'frontpage' or coll_handle == '' %}{% assign coll_handle = 'all' %}{% endif %}
        {% endif %}
      {% endfor %}
      
      {% if section.settings.subscribe_btn_enable and section.settings.sbscrptn_txt != empty %}
        <div class="ch-subscription-button">
          <a
             class="show-subscription-popup manual-optin-trigger ch-subscription-button-link"
          	 href="https://app.monstercampaigns.com/c/{{ settings.theme_optin }}/"
             target="_blank"
             data-optin-slug="{{ settings.theme_optin }}"
          >
            {{ section.settings.sbscrptn_txt }}
          </a>
        </div>
      {% endif %}
      <div class="ch-account-and-cart after-subscription">
        <div class="hdr--srch-wrp">
          <form  action="/search" method="get" role="search" class="hdr--srch-frm">
            {% if settings.search-products-only %}
            <input type="hidden" name="type" value="product" />
            {% endif %}
            <input name="q" class="hdr--srch-fld" type="text" placeholder="{{ 'layout.header.search_placeholder' | t }}"/>
            <button class="hdr--srch-btn ch-account"><i class="fas fa-search"></i></button>
          </form>
        </div>
        <a class="ch-account" href="/account">
          {% if customer %}
          <i class="fas fa-user"></i>
          {% else %}
          <i class="fas fa-user"></i>
          {% endif %}
        </a>
        <a class="ch-cart cart-link" href="/cart">
          <i class="fas fa-shopping-cart"></i>
          <span class="ch-cart-count number" {%if cart.item_count == 0%}hidden{%endif%}>{{ cart.item_count }}</span>
        </a>
        <div class="recently-added">
          <table width="100%">
            <thead>
              <tr>
                <td colspan="3">Recently Added</td>
              </tr>
            </thead>

            <tbody>


            </tbody>

            <tfoot>
              <tr>
                <td class="items-count"><a href="/cart"><span class="number">0</span> Items</a></td>
                <td colspan="2" class="text-right all-caps"><strong>Total <span class="total-price money" style="margin-left:5px;">£0.00</span></strong></td>
              </tr>
            </tfoot>

          </table>

          <div class="row">
            <div class="checkout columns">
              <a class="button" href="/cart">View Cart</a>
            </div><!-- #cart-meta -->
          </div>

          <div class="error">
            <p>The item you just added is unavailable. Please select another product or variant.</p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

