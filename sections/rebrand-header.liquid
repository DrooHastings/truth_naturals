                  <div class="menu-flex-container" {%if link.title == 'Learn' and forloop.first%}style="display: none"{%endif%}>
                    {% if child_link.links != blank %}
                      <span class="ch-menu-child-link">
                        <span class="ch-menu-child-link-text {{ child_link.title | downcase }}">{{child_link.title}}</span>
                      </span>
                    {% else %}
                      <a class="ch-menu-child-link {{ child_link.title | downcase }}" href="{{child_link.url}}">
